<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.feathersoft.navigator.ui.widget.NavigatorToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"/>

        </RelativeLayout>

        <fragment android:id="@+id/fragment_home_menu"
            android:tag="HomeMenuFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:name="com.feathersoft.navigator.ui.fragment.NavigatorMenuFragment"
            tools:layout="@layout/fragment_home_menu"
            android:layout_marginTop="?attr/actionBarSize"/>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>